# Version 1

<search
   version="7.1"
   name="ViFaMATH"
   description="ViFaMATH Simple Search"
   method="get"
   action="http://vifamath.sub.uni-goettingen.de/search.html"
   searchform="http://vifamath.sub.uni-goettingen.de/search.html"
   queryEncoding="utf-8"
   queryCharset="utf-8"
>
<input type="hidden" name="from_splug" value="true">
<input type="hidden" name="request" value="search_results">
<input type="hidden" name="domain" value="Dome">
<input type="hidden" name="dbgroup" value="vifamath">
