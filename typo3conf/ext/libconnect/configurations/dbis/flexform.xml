<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>

		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:lang/locallang_general.xml:LGL.startingpoint</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
			
				<defaultAction>
					<TCEforms>
						<label>Ausgabe</label>
						<onChange>reload</onChange>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">Top-Datenbanken</numIndex>
									<numIndex index="1">displayTop</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">Liste</numIndex>
									<numIndex index="1">displayList</numIndex>
								</numIndex>
								<numIndex index="2" type="array">
									<numIndex index="0">Detailansicht</numIndex>
									<numIndex index="1">displayDetail</numIndex>
								</numIndex>								
								<numIndex index="3" type="array">
									<numIndex index="0">Sidebar-Suchformular</numIndex>
									<numIndex index="1">displayMiniForm</numIndex>
								</numIndex>								
								<numIndex index="4" type="array">
									<numIndex index="0">Suchformular</numIndex>
									<numIndex index="1">displayForm</numIndex>
								</numIndex>								
							</items>
						</config>
					</TCEforms>
				</defaultAction>
				
				<subject>
					<TCEforms>
						<exclude>1</exclude>
						<label>Fachgebiet</label>
						<displayCond><![CDATA[FIELD:defaultAction:=:displayTop]]></displayCond>
						<config>
							<type>select</type>
							<foreign_table>tx_libconnect_subject</foreign_table>
							<foreign_table_where>AND tx_libconnect_subject.deleted=0 AND tx_libconnect_subject.hidden=0 ORDER BY tx_libconnect_subject.title</foreign_table_where>
							<size>1</size>							
							<minitems>1</minitems>							
							<maxitems>1</maxitems>							
						</config>
					</TCEforms>
				</subject>
				
				<detailPid>
					<TCEforms>
						<exclude>1</exclude>
						<label>Detailseite</label>
						<displayCond><![CDATA[FIELD:defaultAction:IN:displayList,displayTop]]></displayCond>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
						</config>
					</TCEforms>
				</detailPid>				

				<listPid>
					<TCEforms>
						<exclude>1</exclude>
						<label>Listenausgabe</label>
						<displayCond><![CDATA[FIELD:defaultAction:=:displayForm]]></displayCond>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
						</config>
					</TCEforms>
				</listPid>				

				<searchPid>
					<TCEforms>
						<exclude>1</exclude>
						<label>Seite mit Detailsuche</label>
						<displayCond><![CDATA[FIELD:defaultAction:=:displayMiniForm]]></displayCond>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
						</config>
					</TCEforms>
				</searchPid>				
				
				<sortParameter>
					<TCEforms>
						<exclude>1</exclude>
						<label>Sortierung</label>
						<displayCond><![CDATA[FIELD:defaultAction:=:displayList]]></displayCond>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">Datenbanktyp</numIndex>
									<numIndex index="1">type</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">Alphabetisch</numIndex>
									<numIndex index="1">alph</numIndex>
								</numIndex>
								<numIndex index="2" type="array">
									<numIndex index="0">Zugangsart</numIndex>
									<numIndex index="1">access</numIndex>
								</numIndex>															
							</items>
						</config>
					</TCEforms>
				</sortParameter>		
			</el>
		</ROOT>

</T3DataStructure>
