{namespace flux=Tx_Flux_ViewHelpers}
<label>{config.label}</label>
<required>{config.required}</required>
<f:if condition="{config.requestUpdate}">
	<onChange>reload</onChange>
</f:if>
<config>
	<type><flux:lowercase>{config.type}</flux:lowercase></type>
	<minitems>{config.minItems}</minitems>
	<maxitems>{config.maxItems}</maxitems>
	<size>{config.size}</size>
	<multiple>{config.multiple}</multiple>
	<show_thumbs>{$config.showThumbs}</show_thumbs>

	<f:if condition="{config.itemsProcFunc}">
		<itemsProcFunc>{config.itemsProcFunc}</itemsProcFunc>
	</f:if>
	<f:if condition="{config.table}">
		<foreign_table>{config.table}</foreign_table>
		<f:if condition="{config.condition}">
			<foreign_table_where>{config.condition}</foreign_table_where>
		</f:if>
		<f:if condition="{config.mm}">
			<MM>{config.mm}</MM>
		</f:if>
	</f:if>
	<f:if condition="{config.items}">
		<items type="array">
			<f:for each="{config.items}" as="set" iteration="iteration">
				<numIndex type="array" index="{iteration.index}">
					<numIndex index="0">{set.1}</numIndex>
					<numIndex index="1">{set.0}</numIndex>
				</numIndex>
			</f:for>
		</items>
	</f:if>
	<f:if condition="{0: config.subType} == {0: 'Tree'}">
		<renderMode>tree</renderMode>
		<treeConfig>
			<parentField>{config.parentField}</parentField>
			<expandAll>
				<f:if condition="{config.expandAll}" then="TRUE" else="FALSE"/>
			</expandAll>
			<showHeader>
				<f:if condition="{config.showHeader}" then="TRUE" else="FALSE"/>
			</showHeader>
			<width>{config.width}</width>
		</treeConfig>
	</f:if>
	<f:if condition="{0: config.type} == {0: 'Group'}">
		<internal_type>{config.internalType}</internal_type>'
		<uploadFolder>{config.uploadFolder}</uploadFolder>
		<allowed>{config.allowed}</allowed>
	</f:if>
	<f:if condition="{config.suggest}">
		<f:then>
			<wizards type="array">
				<_PADDING type="integer">2</_PADDING>
				<suggest>
					<type>suggest</type>
				</suggest>
				<f:if condition="{config.wizards}">
					{config.wizards}
				</f:if>
			</wizards>
		</f:then>
		<f:else>
			<f:if condition="{config.wizards}">
				<wizards type="array"><_PADDING type="integer">2</_PADDING>{config.wizards}</wizards>
			</f:if>
		</f:else>
	</f:if>
</config>